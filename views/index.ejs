<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Notes</title>
    <link rel="stylesheet" href="/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-dark text-white">

    <div class="container mt-4">
        <h1 class="text-center">üé¨ Movie Notes</h1>

        <!-- Add Movie Form -->
        <form action="/add" method="POST" class="mb-4">
            <div class="row g-3">
                <div class="col-md-3">
                    <input type="text" class="form-control" name="title" placeholder="Movie Title" required>
                </div>
                <div class="col-md-2">
                    <input type="number" class="form-control" name="rating" placeholder="Rating (1-10)" required min="1" max="10">
                </div>
                <div class="col-md-3">
                    <input type="date" class="form-control" name="watched_date" required>
                </div>
                <div class="col-md-4">
                    <input type="text" class="form-control" name="notes" placeholder="Your Notes">
                </div>
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-primary">‚ûï Add Movie</button>
                </div>
            </div>
        </form>

        <!-- Movie List -->
        <div class="row">
            <% movies.forEach(movie => { %>
                <div class="col-md-4">
                    <div class="card bg-secondary text-light mb-3">
                        <img src="<%= movie.poster_url %>" class="card-img-top" alt="Movie Poster">
                        <div class="card-body">
                            <h5 class="card-title"><%= movie.title %></h5>
                            <p class="card-text">‚≠ê <strong>Rating:</strong> <%= movie.rating %>/10</p>
                            <p class="card-text">üìÖ <strong>Watched:</strong> <%= movie.watched_date %></p>
                            <p class="card-text">üìù <strong>Notes:</strong> <%= movie.notes %></p>

                            <!-- Edit Movie Form -->
                            <form action="/edit" method="POST" class="d-inline">
                                <input type="hidden" name="id" value="<%= movie.id %>">
                                <input type="text" name="title" class="form-control my-1" value="<%= movie.title %>" required>
                                <input type="number" name="rating" class="form-control my-1" value="<%= movie.rating %>" required min="1" max="10">
                                <input type="date" name="watched_date" class="form-control my-1" value="<%= movie.watched_date %>" required>
                                <input type="text" name="notes" class="form-control my-1" value="<%= movie.notes %>">
                                <button type="submit" class="btn btn-warning btn-sm">‚úèÔ∏è Edit</button>
                            </form>

                            <!-- Delete Movie Form -->
                            <form action="/delete" method="POST" class="d-inline">
                                <input type="hidden" name="id" value="<%= movie.id %>">
                                <button type="submit" class="btn btn-danger btn-sm">üóëÔ∏è Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
